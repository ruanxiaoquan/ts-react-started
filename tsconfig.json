{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "es2015",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true, 
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack.*",
    "jest",
    "server.js",
    "src/setupTests.ts"
  ]
}